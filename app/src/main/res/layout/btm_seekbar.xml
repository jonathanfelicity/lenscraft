<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/white">
    <LinearLayout
        android:id="@+id/llSeek1"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_38sdp"
        android:paddingStart="@dimen/_12sdp"
        android:paddingEnd="@dimen/_12sdp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tvTitle_1"
            android:layout_width="@dimen/_60sdp"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:textSize="@dimen/_7sdp"
            android:text="@string/hue"
            android:textColor="@color/black"/>

        <xProfile.dpMaker.aiPhoto.removeBg.photoEditorPro.views.TwoLineSeekBar
            android:id="@+id/sb_1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"/>

        <TextView
            android:id="@+id/tvValue_1"
            android:layout_width="@dimen/_20sdp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_7sdp"
            android:gravity="center"
            android:text="0"
            android:textSize="@dimen/_7sdp"
            android:textColor="@color/black"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/llSeek2"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_38sdp"
        android:paddingStart="@dimen/_12sdp"
        android:paddingEnd="@dimen/_12sdp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tvTitle_2"
            android:layout_width="@dimen/_60sdp"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:textSize="@dimen/_7sdp"
            android:text="@string/hue"
            android:textColor="@color/black"/>

        <xProfile.dpMaker.aiPhoto.removeBg.photoEditorPro.views.TwoLineSeekBar
            android:id="@+id/sb_2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"/>

        <TextView
            android:id="@+id/tvValue_2"
            android:layout_width="@dimen/_20sdp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_7sdp"
            android:gravity="center"
            android:text="0"
            android:textSize="@dimen/_7sdp"
            android:textColor="@color/black"/>


    </LinearLayout>

    <LinearLayout
        android:id="@+id/llSeek3"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_38sdp"
        android:paddingStart="@dimen/_12sdp"
        android:paddingEnd="@dimen/_12sdp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tvTitle_3"
            android:layout_width="@dimen/_60sdp"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:textSize="@dimen/_7sdp"
            android:text="@string/hue"
            android:textColor="@color/black"/>

        <xProfile.dpMaker.aiPhoto.removeBg.photoEditorPro.views.TwoLineSeekBar
            android:id="@+id/sb_3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"/>

        <TextView
            android:id="@+id/tvValue_3"
            android:layout_width="@dimen/_20sdp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_7sdp"
            android:gravity="center"
            android:text="0"
            android:textSize="@dimen/_7sdp"
            android:textColor="@color/black"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/_37sdp"
        android:layout_gravity="bottom"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/ivClose"
            android:layout_width="@dimen/_27sdp"
            android:layout_height="@dimen/_27sdp"
            android:layout_marginStart="@dimen/_7sdp"
            android:padding="@dimen/_6sdp"
            android:background="@drawable/bg_circle"
            android:backgroundTint="@color/itemColor"
            android:src="@drawable/ic_round_close"/>

        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textSize="@dimen/_8sdp"
            android:gravity="center"
            android:textColor="@color/black"
            android:textAllCaps="true"
            android:text="TEMPORARY"/>

        <ImageView
            android:id="@+id/ivDone"
            android:layout_width="@dimen/_27sdp"
            android:layout_height="@dimen/_27sdp"
            android:layout_marginEnd="@dimen/_7sdp"
            android:padding="@dimen/_6sdp"
            android:background="@drawable/bg_circle"
            android:backgroundTint="@color/itemColor"
            android:src="@drawable/ic_round_check"
            app:tint="@color/black"/>
    </LinearLayout>

</LinearLayout>